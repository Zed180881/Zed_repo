package lesson3;

//Створіть масив з усіх парних чисел від 2 до 20 і виведіть елементи масиву 
//на екран спочатку в рядок, відокремлюючи один елемент від іншого прогалиною, 
//а потім в стовпчик (відокремлюючи один елемент від іншого початком нового рядка). 
//Перед створенням масиву подумайте, якого він буде розміру.

public class Task1 {

	public static void main(String[] args) {

		int[] array = createArray();
		arrayPrintRow(array);
		arrayPrintColumn(array);

	}

	private static void arrayPrintColumn(int[] array) {
		for (int i : array) {
			System.out.println(i);
		}

	}

	private static void arrayPrintRow(int[] array) {
		for (int i : array) {
			System.out.print(i + " ");
		}
		System.out.println("");

	}

	private static int[] createArray() {

		int[] array = new int[10];
		int n = 2;
		for (int i = 0; i < 10; i++) {
			array[i] = n;
			n = n + 2;
		}
		return array;
	}
}
