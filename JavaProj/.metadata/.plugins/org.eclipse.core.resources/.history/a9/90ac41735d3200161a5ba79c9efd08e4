package lesson7;

import org.junit.Test;
import static org.junit.Assert.*;

public class ArithmeticTest {

	@Test
	public void addTest() {
		int expected = 4;
		int actual = Arithmetic.add(2, 2);
		assertEquals(expected, actual);
	}
	
	@Test
	public void divTest() {
		int expected = 0;
		int actual = Arithmetic.div(2, 0);
		assertEquals(expected, actual);
	}

}
