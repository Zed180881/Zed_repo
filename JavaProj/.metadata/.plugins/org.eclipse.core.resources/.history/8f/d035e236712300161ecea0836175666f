package lesson4;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int[][] battle = new int[3][3];		
		boolean isRun = true;
		while (isRun) {
			cpuShot(battle);
			userShot(battle, sc);
			print(battle);
			isRun = isSomeOneWin(battle);
		}		
		sc.close();
	}

	static boolean isSomeOneWin(int[][] battle) {
		// TODO Auto-generated method stub
		return false;
	}

	static void userShot(int[][] battle, Scanner sc) {
		System.out.println("Enter x-coord:");
		int x = read(sc);
		System.out.println("Enter y-coord:");
		int y = read(sc);
		battle[x][y]=2;
	}

	static void print(int[][] battle) {
		for (int i = 0; i < battle.length; i++) {
			for (int j = 0; j < battle[i].length; j++) {
				if (battle[i][j] == 0)
					System.out.print("  ");
				else if (battle[i][j] == 1)
					System.out.print("x ");
				else
					System.out.print("O ");
			}
			System.out.println();
		}
	}

	static int random(int from, int to) {
		int r = (int) Math.round(Math.random() * (to - from) + from);
		return r;
	}

	static void cpuShot(int[][] battle) {
		boolean isShoted = true;
		while (isShoted) {
			int x = random(0, 2);
			int y = random(0, 2);
			if (battle[x][y] == 0) {
				isShoted = false;
				battle[x][y] = 1;
			}
		}
	}

	static int read(Scanner sc) {
		if (sc.hasNextInt())
			return sc.nextInt();
		return 0;
	}
}
