package lesson3;

//Створіть масив з 15 випадкових цілих чисел з відрізка [0; 9]. 
//Виведіть масив на екран. Підрахуйте скільки в масиві парних елементів і 
//виведете цю кількість на екран на окремому рядку. 

public class Task3 {

	public static void main(String[] args) {

		int[] arr = createRndArray(15, 0, 9);
		arrayPrintRow(arr);
	}

	private static int[] createRndArray(int size, int from, int to) {

		int[] array = new int[size];
		for (int i=0; i<array.length; i++)
			array[i] = (int) Math.round(Math.random() * (to - from) + from);
		return array;
	}

	private static void arrayPrintRow(int[] array) {
		for (int i : array)
			System.out.print(i + " ");
		System.out.println("");
	}
}
