	private static List<Car> createCars() {
		List<Car> cars = new ArrayList<>();
		Car car1 = new Car("BMW", "red", "sedan", 22, "summer", 12, true);
		cars.add(car1);
		Car car2 = new Car("Lada", "blue", "sedan", 18, "winter", 10, false);
		cars.add(car2);
		Car car3 = new Car("Pego", "black", "sedan", 21, "winter", 11, true);
		cars.add(car3);
		Car car4 = new Car("Mazda", "yellow", "sedan", 23, "summer", 12, true);
		cars.add(car4);
		Car car5 = new Car("Porshe", "green", "sedan", 25, "summer", 14, true);
		cars.add(car5);
		Car car6 = new Car("Kapeyka", "white", "sedan", 18, "summer", 12, false);
		cars.add(car6);
		Car car7 = new Car("Lanos", "grey", "sedan", 19, "winter", 13, false);
		cars.add(car7);
		Car car8 = new Car("Shkoda", "white", "sedan", 21, "summer", 12, true);
		cars.add(car8);
		Car car9 = new Car("Ford", "blue", "sedan", 19, "winter", 11, true);
		cars.add(car9);
		Car car10 = new Car("Audi", "black", "sedan", 24, "summer", 14, true);
		cars.add(car10);
		return cars;
	}
}