	// category3.setName("Freezer");
	// em.persist(category3);
	// Category category4 = new Category();
	// category4.setName("MicroVawe");
	// em.persist(category4);

	// Producer producer1 = new Producer();
	// producer1.setName("LG");
	// em.persist(producer1);
