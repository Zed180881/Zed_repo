<body>
	<h3>Add category:</h3>
	<form:form action="/admin/category" method="post" modelAttribute="category" enctype="multipart/form-data">
		<form:errors path="categoryName"/><br>
		<form:input path="id" type="hidden"/>
		<form:hidden path="version"/>
		<form:hidden path="path"/>
		<label for="categoryName">Category name:</label><br>
		<form:input type="text" path="categoryName" id="categoryName" placeholder="input category name here" required="true"/><br> 
		<input type="file" name="file"><br>			
		<input type="submit" value="Save category">
	</form:form><br>
	<c:if test="${filter ne null}">
	<form:form action="/admin/category" method="get"
		modelAttribute="filter">
		<table>
			<tr><td><form:input path="categoryName"/></td></tr>
			<tr><td><input type="submit" value="Filter"></td></tr>
		</table>
	</form:form>
	</c:if>
	<h3>Current categories:</h3>
	<table>
		<c:forEach items="${categories.content}" var="category">
		<tr>
			<td>${category.categoryName}</td>
			<td><img src="/images/category/${category.id}${category.path}?version=${category.version}" height="100" width="100"/></td>			
			<td><a href="/admin/category/delete/${category.id}">delete</a></td>
			<td><a href="/admin/category/update/${category.id}">update</a></td>
		</tr>
		</c:forEach>
		<tr>
			<td><c:if test="${categories.number ne 0}">
				<a href="/admin/category?page=${categories.number}&size=${categories.size}">previous</a>
			</c:if></td>
			<td><c:if test="${categories.number ne categories.totalPages-1}">
				<a href="/admin/category?page=${categories.number+2}&size=${categories.size}">next</a>
			</c:if></td>
		</tr>		
	</table><br>
	<a href="/admin/category?page=1&size=1">1</a>
