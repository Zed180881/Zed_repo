package lesson2DzTask2;

public class MyMath {

	public static final double NUMBER_PI = 3.14159;
	public static final double NUMBER_E = 2.71828;

	public static int abs(int a) {
		if (a < 0)
			return a * -1;
		return a;
	}

	public static double abs(double a) {
		if (a < 0)
			return a * -1;
		return a;
	}

	public static int max(int a, int b) {
		if (a > b)
			return a;
		return b;
	}

	public static double max(double a, double b) {
		if (a > b)
			return a;
		return b;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
