package lesson5Dz;

public class SteeringWheel {

	private boolean isOK;

	public SteeringWheel() {
		this.isOK = true;
	}
	
	public void damage() {
		this.isOK = false;
	}
	
	public void run() {		
		if (isOK)
			System.out.println("Руль рулює:)");
		else
			System.out.println("Руль відламався. Поїздка не можлива. Треба ремонтувати.");
	}

}
