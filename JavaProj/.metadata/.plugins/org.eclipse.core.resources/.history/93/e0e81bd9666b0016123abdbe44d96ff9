		<form:select path="role" id="role">
			<c:forEach items="${roles}" var="role">
				<c:choose>
					<c:when test="${user.role eq role}">
						<option value="${role}" selected="selected">${role}</option>
					</c:when>
					<c:otherwise>
						<option value="${role}">${role}</option>
					</c:otherwise>
				</c:choose>
			</c:forEach>			
		</form:select><br>
